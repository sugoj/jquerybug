	$("document").ready(function(){

	$(".sochimap").mouseover(function()
		{
				var id  = $(this).index();
				id = id + 2;
				$(".soch_slider").removeClass("display");
				$(".soch_slider:nth-child("+id+")").addClass("display");
			
		});
		
		
		
	});
